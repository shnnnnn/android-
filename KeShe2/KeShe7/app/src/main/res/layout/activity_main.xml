<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- 工具栏 -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/purple_500"
                app:navigationIcon="@drawable/ic_menu"
                app:title="任务管理" />

            <!-- 分类筛选（现代风按钮组） -->
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/category_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_category_all"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="全部"
                    android:textAllCaps="false"
                    app:strokeColor="@color/purple_500"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/category_btn_tint"
                    android:textColor="@color/category_btn_text" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_category_work"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="工作"
                    android:textAllCaps="false"
                    app:strokeColor="@color/purple_500"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/category_btn_tint"
                    android:textColor="@color/category_btn_text" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_category_study"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="学习"
                    android:textAllCaps="false"
                    app:strokeColor="@color/purple_500"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/category_btn_tint"
                    android:textColor="@color/category_btn_text" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_category_life"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="生活"
                    android:textAllCaps="false"
                    app:strokeColor="@color/purple_500"
                    app:strokeWidth="1dp"
                    app:backgroundTint="@color/category_btn_tint"
                    android:textColor="@color/category_btn_text" />

            </com.google.android.material.button.MaterialButtonToggleGroup>

            <!-- 任务列表 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="8dp" />

        </LinearLayout>

        <!-- 添加任务按钮 -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="@color/blue" />

    </FrameLayout>

    <!-- 侧边导航栏 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>